

<%= form_for(@portfolio_item) do |form| %>

<% if @portfolio_item.errors.any? %>
<%= js add_gritter("&copy", title: pluralize(@portfolio_item.errors.count, 'error') + " prohibited this portfolio item from being saved:"  )%>

<% @portfolio_item.errors.full_messages.each do |message| %>
<%= js add_gritter(message, title: "Anericod") %>

<% end %>
 <% end %>

<div class="row">
  <div class="col-md-6">

   <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :"Main Image" %>
    <%= form.file_field :main_image, class: "form-control btn btn-primary" %>
  </div>

  <div class="form-group">
    <%= form.label :"Thumb Image" %>
    <%= form.file_field :thumb_image, class: "form-control btn btn-primary" %>
  
  </div>


</div>

<div class="col-md-6">

 <div class="form-group">
  <%= form.label :body %>
  <%= form.text_area :body, class: "form-control", rows: 14 %>
</div>



</div>
<div class="col-md-12">

  <hr>
  <h2>
    Technologies used
  </h2>
  <div>
    <%= form.fields_for :technologies do |technology_form| %>
    <%= render 'technology_fields', form:technology_form %>
   
    <% end %>
    <%= link_to_add_association 'Add Technology', form, :technologies, form_name: "technology_form", partial: "technology_fields" %>
    
  </div>

  <div class="form-group">
    <%= form.submit "Save portfolio item", class: "btn btn-primary btn-block" %>
  </div>



</div>







</div>
<% end %>
