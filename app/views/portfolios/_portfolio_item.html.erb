
<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></span>
      <p><%= portfolio_item.subtitle %></p>
      <p><%= portfolio_item.body %></p>
    </p>
      <div class="d-flex justify-content-between align-items-center">
        <% if logged_in?(:site_admin) %>
        <div class="btn-group">

            <button type="button" class="btn btn-sm btn-outline-danger"><%= link_to 'Delete this', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></button>

            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit this post", edit_portfolio_path(portfolio_item.id) %> </button>

          </div>

          <% end %>
          <small class="text-muted">9 mins</small>
        </div>

      </div>
    </div>
  </div>








