<% unless current_user.is_a? GuestUser %>
<%= form_for @comment, url: "#" do |form| %>
<div class="form-group">
  <hr>
  <div><%= form.label :content %></div>
  <div><%= form.text_area :content, class: "form- control" %>
  </div>
</div>
<div class="form-group">
  <%= form.submit "Post comment", style: "btn btn-primary" %>
</div>
<% end %>

<% end %>